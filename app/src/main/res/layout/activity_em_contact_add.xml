<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#fff"
        android:padding="5dp"
        android:orientation="vertical"
        android:weightSum="1"
    tools:context="com.nisaidie.nisaidie1.activity.EmContactAdd">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Enter details for your first Emergency Contact"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/emFName_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:backgroundTint="#d9dede"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/emLName_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:backgroundTint="#d9dede"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/em_phone_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d9dede"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:inputType="phone"
                android:hint="Phone number"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/em_other_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d9dede"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:inputType="phone"
                android:hint="Other Number"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/em_address_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d9dede"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:inputType="textLongMessage"
                android:hint="Address"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/em_rel_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d9dede"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:inputType="textLongMessage"
                android:hint="Relationship to person"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>